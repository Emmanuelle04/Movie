{#                                </a>#}
{#                            {% endfor %}#}
{#                        </div>#}

{#                        <div class="ui divider"></div>#}

                        <div class="meta">
                            <span class="category"> {{ data.releasedDate|date('Y-m-d') }}</span>
                        </div>

                        <div class="ui divider"></div>

                        <div class="meta">
                            <span class="category"> {{ data.Producer }}</span>
                        </div>

                        <div class="ui divider"></div>

                        <div class="meta">
                            <span class="category"> {{ data.Description }}</span>
                        </div>

                        <br>

