{% for message in app.flashes('error') %}
    <div class="ui error message">
        <i class="close icon"></i>
        <div class="header">
            {{ message }}
        </div>
    </div>
{% endfor %}

{% if data | length > 0 %}
    <div class="container-fluid" style="margin: auto;">
        <div class="ui segment">
            <div class="ui equal width center aligned padded grid" style="margin: auto;">
                <div class="row">

                    <div class="column image">
                        <div class="ui image">
                            <div class="ui blue ribbon label">
                                <i class="hotel icon"></i> {{ data.Title }}
                            </div>

                            <img src="{{ asset('uploads/poster/' ~ (data.getPoster())) }}" alt="poster">
                        </div>
                    </div>

                    <div class="column">
                        <div class="meta">
                            <p style="text-align: center;" class="category"> {{ data.Title }}</p>
                        </div>

                        <div class="ui divider"></div>

{#                        <div class="meta">#}
