{% extends 'base.html.twig' %}

{% block title %}List of Movies{% endblock %}

{% block body %}
    {% include('partials/navbaradmin.html.twig') %}

    <div class="example-wrapper">
        <h1 style="text-align: center">List of Movies</h1>

        <table class="ui fixed table" id="mytable">
            <tr>
                <th>Movie Title</th>
                <th>Category</th>
                <th>Poster</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            {% for x in data %}
                <tr>
                    <td>{{ x.title }}</td>
                    <td>{{ x.category.name }}</td>
                    <td><img class="img-thumbnail" src="{{ asset('uploads/poster/' ~ x.poster) }}" width="100px"
                             height="150px" alt="movie poster"></td>
                    <td>
                        <a href="{{ path('admin_view_movie', {id: x.id}) }}">
                            <button class="ui grey basic button">View</button>
                        </a>
                    </td>

                    <td>
                        <a href="{{ path('edit', {id: x.id}) }}">
                            <button class="ui blue basic button">Edit</button>
                        </a>
                    </td>

                    <td>
                        <a href="{{ path('delete', {id: x.id}) }}">
                            <button onclick="return confirm('Are you sure you want to delete this record ?')"
                                    class="ui red basic button">Delete
                            </button>
                        </a>

                    </td>
                </tr>
            {% endfor %}
        </table>

    </div>


{% endblock %}
